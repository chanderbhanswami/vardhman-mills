{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["src/**/*", "types/**/*", "utils/**/*", "**/*.ts", "**/*.js"],
  "exclude": ["dist", "node_modules"]
}