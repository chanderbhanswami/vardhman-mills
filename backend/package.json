{
  "name": "vardhman-mills-backend",
  "version": "1.0.0",
  "description": "Backend API for Vardhman Mills E-commerce",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "tsx src/scripts/test-api.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "seed": "tsx src/scripts/seed.ts",
    "seed:dev": "NODE_ENV=development tsx src/scripts/seed.ts",
    "seed:prod": "NODE_ENV=production tsx src/scripts/seed.ts",
    "db:init": "tsx src/scripts/db-init.ts",
    "db:indexes": "tsx src/scripts/create-indexes.ts",
    "validate": "tsx src/scripts/validate.ts",
    "setup": "npm run db:init && npm run db:indexes && npm run seed:dev",
    "setup:prod": "npm run db:init && npm run db:indexes && npm run validate"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "Vardhman Mills",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@types/json2csv": "^5.0.7",
    "@types/mongoose": "^5.11.96",
    "@types/passport": "^1.0.17",
    "@types/pdfkit": "^0.17.3",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.17.2",
    "razorpay": "^2.9.6",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "stripe": "^18.4.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.17.1"
  }
}
